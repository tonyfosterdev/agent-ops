# AgentOps Environment Configuration
# Copy to .env and fill in values

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3200
HOST=0.0.0.0
NODE_ENV=development

# =============================================================================
# Anthropic API (Required)
# =============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# Inngest Configuration
# =============================================================================
# Development mode (uses local dev server)
INNGEST_DEV=true
INNGEST_DEV_SERVER_URL=http://inngest-dev:8288

# Production mode - uncomment and set these
# INNGEST_DEV=false
# INNGEST_EVENT_KEY=your-production-event-key
# INNGEST_SIGNING_KEY=your-production-signing-key

# =============================================================================
# Database Configuration (Ops PostgreSQL)
# =============================================================================
OPS_DB_HOST=ops-db
OPS_DB_PORT=5432
OPS_DB_USERNAME=opsuser
OPS_DB_PASSWORD=opspassword
OPS_DB_DATABASE=ops_db

# Or use a full connection URL (overrides above settings)
# AGENT_DATABASE_URL=postgres://opsuser:opspassword@ops-db:5432/ops_db

# =============================================================================
# OpenTelemetry Configuration
# =============================================================================
OTEL_ENABLED=true
OTEL_SERVICE_NAME=agentops
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://tempo:4318/v1/traces

# =============================================================================
# External Service URLs
# =============================================================================
LOKI_URL=http://loki:3100
STORE_API_URL=http://store-api:3000
WAREHOUSE_ALPHA_URL=http://warehouse-alpha:3000
WAREHOUSE_BETA_URL=http://warehouse-beta:3000

# =============================================================================
# Workspace Configuration
# =============================================================================
WORK_DIR=/workspace
