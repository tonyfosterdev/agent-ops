# Store Database
STORE_DB_USERNAME=storeuser          # PostgreSQL username for store database
STORE_DB_PASSWORD=storepass          # PostgreSQL password for store database
STORE_DB_DATABASE=store_db           # PostgreSQL database name for store

# Warehouse Databases
WAREHOUSE_DB_USERNAME=warehouseuser  # PostgreSQL username for warehouse databases
WAREHOUSE_DB_PASSWORD=warehousepass  # PostgreSQL password for warehouse databases
WAREHOUSE_ALPHA_DB_DATABASE=warehouse_alpha_db  # Database name for warehouse alpha
WAREHOUSE_BETA_DB_DATABASE=warehouse_beta_db    # Database name for warehouse beta

# Service-to-Service Authentication
SERVICE_SECRET=super-secret-shared-token-change-me  # Bearer token for store <-> warehouse communication

# Grafana (Log Visualization)
GRAFANA_ADMIN_USER=admin             # Grafana admin username
GRAFANA_ADMIN_PASSWORD=admin         # Grafana admin password

# Agent Server (AI Operations CLI)
AGENT_SERVER_USERNAME=admin          # Basic auth username for agent server
AGENT_SERVER_PASSWORD=admin123       # Basic auth password for agent server
